@model Game

<div class="row mb-5">
    <div class="col-4 offset-2">
        <form asp-controller="Game" class="mt-5 settings-form" asp-action="Settings" method="post">
            <div class="">
                <label>Your name</label>
                <input type="text" asp-for="@Model.Player" class="form-control" />
            </div>
            <div class="form-group">
                <label class="mt-4">Game Difficulty</label>
                <select asp-for="@Model.GameDifficulty" class="form-select" aria-label="Default select example">
                    <option value="2">Easy(2x2)</option>
                    <option value="4">Normal(4x4)</option>
                    <option value="6">Hard(6x6)</option>
                </select>
            </div>
            <button class="mt-4 me-3 btn btn-primary" type="submit" value="Ok">Ok</button>
            <a asp-controller="Home" asp-action="Index" class="mt-4 btn btn-danger">Cancel</a>
        </form>
    </div>
    <div class="col-2 offset-1">
        <img src="~/img/TheBrothersKolobki_3.png" width="400"/>
    </div>
</div>