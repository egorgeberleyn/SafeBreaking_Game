@model Game

@if(Model.GameDifficulty == 6)
{
    <style>
        .safe-label {
            width: 50px;
            height: 20px;
            margin-left: 2rem;
            margin-top: 2.5rem;
        }

        input[type="checkbox"] + span {            
            width: 50px;
            height: 20px;            
        }

        input[type="checkbox"]:checked + span {           
            width: 50px;
            height: 20px;           
        }
    </style>
}

<div class="row">
    <div class="col-2" style="margin-top:22rem;">
        <img src="~/img/TheBrothersKolobki_1.png" width="240">
    </div>
    
    <div class="col-8">
        <div class="wrapper">
            <div class="safe">
                @for (int i = 0; i < Model.Handles.Length; i++)
                {
                    <div class="justify-content-center d-flex start-row">
                        @for (int j = 0; j < Model.Handles[i].Length; j++)
                        {
                            <label class="safe-label">
                                <a asp-controller="Game" asp-action="Safe" asp-route-row="@i" asp-route-column="@j">
                                    <input type="checkbox" checked="@Model.Handles[i][j].IsVertical">
                                    <span></span>
                                </a>
                            </label>
                        }
                        <br />
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-2">
        <img src="~/img/TheBrothersKolobki_2.png" width="240">
    </div>
</div>